<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomerList"/>
    <style name="CustomerItem"/>
    <style name="CustomerItemDetails"/>

    <style name="CustomerList.Header">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">27sp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="CustomerList.Container">
        <item name="android:paddingStart">8dp</item>
        <item name="android:layout_margin">2dp</item>
    </style>


    <style name="CustomerItem.Container">
        <item name="android:padding">4dp</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="CustomerItem.Name">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">12dp</item>
    </style>

    <style name="CustomerItem.Gender">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:alpha">0.80</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="CustomerItem.Phone">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:alpha">0.80</item>
    </style>

    <style name="CustomerItem.Photo">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomerItem.PhotoPlaceHolder">
        <item name="android:text">48sp</item>
        <item name="android:textColor">#CED4DA</item>
        <item name="android:alpha">0.80</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomerItemDetails.Name">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="CustomerItemDetails.Gender">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:alpha">0.80</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="CustomerItemDetails.Phone">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:alpha">0.80</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="CustomerItemDetails.DividerPhone">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:alpha">0.80</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="CustomerItemDetails.Photo">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomerItemDetails.PhotoPlaceHolder">
        <item name="android:text">48sp</item>
        <item name="android:textColor">#CED4DA</item>
        <item name="android:alpha">0.80</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomerItemDetails.AddressLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">20dp</item>

    </style>

    <style name="CustomerItemDetails.AddressValue">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomerItemDetails.Container">
        <item name="android:layout_margin">8dp</item>
    </style>

</resources>